const stackJoin = (stack: Stack[]) => {
  let res = "";

  const toA = (s: Stack) => {
    if (s.url) {
      return `<a href="${s.url}">${s.title}</a>`;
    } else {
      return s.title;
    }
  };

  for (let i = 0; i < stack.length; i++) {
    if (i === stack.length - 1) {
      res += `and ${toA(stack[i])}`;
    } else {
      res += `${toA(stack[i])}, `;
    }
  }

  return res;
};
